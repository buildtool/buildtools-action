    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.11.1",
    "@types/semver": "^7.3.5",
    "@zeit/ncc": "^0.22.3",
    "jest": "^27.4.4",
    "jest-circus": "^27.2.5",
